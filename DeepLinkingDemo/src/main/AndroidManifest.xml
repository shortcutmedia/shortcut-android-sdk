<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sc.shortcut.deeplinkingdemo" >

    <!--<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />-->

    <application
        android:name="sc.shortcut.sdk.android.deeplinking.SCDeepLinkingApp"
        android:vmSafeMode="true"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "recipe-app://recipes" -->
                <data
                    android:host="shortcut.sc"
                    android:scheme="scdemo"
                    android:path="/demo"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>

        <meta-data android:name="sc.shortcut.sdk.deeplinking.authToken" android:value="1s5HTnfCDdgPy61yaDZL" />
    </application>

</manifest>
